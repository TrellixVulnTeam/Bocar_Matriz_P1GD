<!--Modales de alta de riesgo y control-->
<% if (registro=='riesgoAlta' ) { %>
  <script>
      jQuery(document).ready(function (e) {
          $('#altaRiesgo').modal('show');
      });
  </script>
  <div class="modal" id="altaRiesgo">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title">Estatus de solicitud</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <div class="col-12 alert alert-success  align-items-center" role="alert">
                      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img"
                          aria-label="Success:" style="float: left;">
                          <use xlink:href="#check-circle-fill" />
                      </svg>
                      <div >
                          Riesgo, dado de alta exitosamente
                      </div>
                  </div>
                  <div class="modal-footer">
                      <button type="button" class="btn btn-outline-primary"
                          data-bs-dismiss="modal">Cerrar</button>
                  </div>
              </div>
          </div>
      </div>

      <% } if (registro=='controlAlta' ) { %>
          <script>
              jQuery(document).ready(function (e) {
                  $('#altaControl').modal('show');

              });
          </script>
          <div class="modal" id="altaControl">
              <div class="modal-dialog">
                  <div class="modal-content">
                      <div class="modal-header">
                          <h5 class="modal-title">Estatus de solicitud</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal"
                              aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                          <div class="col-12 alert alert-success  align-items-center" role="alert">
                              <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img"
                                  aria-label="Success:" style="float: left;">
                                  <use xlink:href="#check-circle-fill" />
                              </svg>
                              <div>
                                  Control, dado de alta exitosamente
                              </div>
                          </div>
                      </div>
                      <div class="modal-footer">
                          <button type="button" class="btn btn-outline-primary"
                              data-bs-dismiss="modal">Cerrar</button>
                      </div>
                  </div>
              </div>
          </div>
          <% } %>